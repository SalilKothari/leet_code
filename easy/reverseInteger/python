class Solution:
    def reverse(self, x: int) -> int:
        
        if (x == 0):
            return 0
        
        pos = 1 if x > 0 else -1
        
        x_ = int(str(abs(x))[::-1])
        
        if (x_<-2**31) or (x_>2**31 -1):
            return 0
        
        return  x_*pos
        
        
