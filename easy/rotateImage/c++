class Solution {
public:
    void rotate(vector<vector<int>>& matrix) {
        
        
        
        //transpose
        for(int r = 0; r<matrix.size(); ++r){
            for(int c = r+1; c<matrix.size(); ++c){
                swap(matrix[r][c], matrix[c][r]);
            }
        }
        
        
        //reverse
        for(int r = 0; r<matrix.size(); ++r){
            reverse(matrix[r].begin(), matrix[r].end());
        }
        
        
        
        
    }
};
