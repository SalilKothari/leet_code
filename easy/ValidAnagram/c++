class Solution {
public:
    bool isAnagram(string s, string t) {
        
        
        if(s.size()!=t.size()){return false;}

        int combo[26] = {0};
        
        
        for(int i = 0; i<s.size(); ++i){
            ++combo[s[i]-'a'];
            --combo[t[i]-'a'];
            
        }
        
        
        for(int i = 0; i<26; ++i){
            if(combo[i]!=0){
                return false;
            }
        }
        return true;
        
        
        
    }
};
